<h1><%= name %> articulo</h1>
<%= form_for(@article) do |f| %>
	<% @article.errors.full_messages.each do |message|%>
		<div class="be-red">
			* <%= message%>
		</div>
	<%end%>
<div class="container">
	<div class="field col-xs-6">
		<%= f.text_field :title,placeholder: "Titulo", class: "form-control"%>
	</div>
	<br><br>
	<div class="field col-xs-9">
		<%= f.text_area :body,placeholder: "Escribe aqui el articulo", style: "height: 250px;", class: "form-control"%>
	</div>

	<div class="field">
		<%= f.submit "Guardar", class: "btn btn-default"%>
	</div>
</div>
<%end%>